<% include ../partials/header %>

<div class="row no-gutters">
	<div class="col-lg-9">
		<div class="ml-2 mt-3">
			<span class="boldtext"><a href="/users/<%= userId %>" class="black"> 
			<% if(match){ %>
				My</a></span>
			<% } else{ %>
				<%= userName %></a></span>'s
			<% } %>
				friends
		</div>

		<div class="dropctn mt-2">
			<div class="pr-2">
	      <button class="btn btn-sm dropdown-toggle editprofile pr-0 py-0 invisible" type="button" data-toggle="dropdown"><i class="fas fa-chevron-down"></i></button>
	    </div>
			<div>
	      <nav aria-label="Page navigation">
		    <% if (pages && pages > 0){ %>
		    	<ul class="pagination justify-content-center">
		        <% if (current == 1){ %>
		        <li class="page-item disabled text-sm"><a class="page-link">«</a></li>
		        <% } else{ %>
		        <li><a class="page-link text-sm" href="/users/<%= userId %>/all_friends">«</a></li>
		        <% } %>
		 
		        <% var i=(Number(current)>3 ? Number(current)-2:1) %>
		        <% for (i;i<=(Number(current)+2) && i<=pages; i++){ %>
			        <% if (i == current) { %>
			        <li class="active"><a class="page-link text-sm"><%= i %></a></li>
			        <% } else{ %>
			        <li><a class="page-link text-sm" href="/users/<%= userId %>/all_friends?page=<%= i %>"><%= i %></a></li>
			        <% } %>
		        <% } %>
		 
		        <% if (current == pages){ %>
		        <li class="page-item disabled text-sm"><a class="page-link">»</a></li>
		        <% } else{ %>
		        <li><a class="page-link text-sm" href="/users/<%= userId %>/all_friends?page=<%= pages %>">»</a></li>
		        <% } %>
		    	</ul>
		    <% } %>
				</nav>
	    </div>
	    <div id="paginate-go-to">
	      <div class="dropdown ml-auto pr-2">
	        <button class="btn btn-sm dropdown-toggle editprofile pr-0 py-0" type="button" data-toggle="dropdown"><i class="fas fa-chevron-down"></i></button>
	        <div class="dropdown-menu dropdown-menu-right dropbox transparent">
	          <div class="container drop-shadow1 floatright page-index-back">
	            <div class="input-group input-group-sm px-2">
	              <input href="/users/<%= userId %>/all_friends?page=" type="number" id="page-index-input2" class="form-control search text-xs px-1" placeholder="Page ..">
	              <div class="input-group-append">
	                <button id="page-index-button2" class="btn btn-secondary text-sm btnxs" type="submit"> Go </button>
	              </div>
	            </div>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>

		<div id="server-friends">
			<div class="row no-gutters">
				<% if(friendsCount == 0){ %>
					<h6 class="lightgrey m-2">No friends yet :)</h6>
				<% }else{ %>
					<% var len = users.length; var k=0; for(k;k<len;k++){ %>
						<div class="col-md-4 mobilepad px-1">
							<div class="card searchcard">
								<div class="d-inline-flex">
									<div>
							      <a href="/users/<%= users[k]._id %>">
				            	<img class="searchdp" style="margin: 0 !important;" src="<%= Friends_100_profilePic[k] || '/images/noUser.png' %>">
				          	</a>
							    </div>
							    <div class="card-body3 lineheight fullwidth">
							    	<div class="valign">
								    	<div>
									    	<a href="/users/<%= users[k]._id %>" class="grey">
									      	<span class="nothing text-lg"><strong class="searchname"><%= users[k].fullName %></strong></span>
									      </a>
									    </div>
									    <% if(users[k].isLoggedIn === true){ %>
										    <div>
	                        <svg height="16" width="16">
	                          <circle cx="8" cy="7" r="5" stroke="#60b769" stroke-width="1" fill="#9feca6"/>
	                        </svg>
	                      </div>
	                    <% } %>
									   </div>
							      <div class="lightgrey text-xs"><%= users[k].note %></div>
							      <br>
							      <div class="darkgrey text-xs search-bottomright"><%= users[k].userKeys.residence %></div>
							    </div>
							  </div>
						  </div>
						</div>
				  <% } %>
				<% } %>
			</div>
		</div>
	</div>
	<div class="col-lg-3 px-2 mobileNone">
    <br>
    <div class="list-group">
      <li class="list-group-item orangecolor text-sm boldtext mt-3"><i class="fas fa-plus"></i> Invite your friends, spread the message</li>
    </div>
  </div>
</div>

<% include ../partials/footer %>