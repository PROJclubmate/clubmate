                  <div class="carousel-item active carousel-div carousel-img">
                    <img class="cover mobile-cover" src="/images/noImage.png" style="opacity: 0;">
                  </div>
                </div>
              <% } %>
              <% if(user.featuredPhotos.length != 0){ %>
                <% if(user.featuredPhotos.length > 1){ %>
                  <ol class="carousel-indicators">
                    <% for(var i=0;i<user.featuredPhotos.length;i++){ %>
                      <li data-target="#carouselControls" data-slide-to="<%= i %>"></li>
                    <% } %>
                  </ol>
                <% } %>
                <div class="carousel-inner d-flex">
                  <% if(user.featuredPhotos.length >= 1){ %>
                    <div class="carousel-item active">
                      <img class="cover mobile-cover" src="<%= user.featuredPhotos[0].image %>">
                      <div class="carousel-caption">
                        <h6 class="carousel-caption-heading"><%= user.featuredPhotos[0].heading %></h6>
                        <div><%= user.featuredPhotos[0].description %></div>
                      </div>
                    </div>
                  <% } %>
                  <% if(user.featuredPhotos.length >= 2){ %>
                    <% for(var i=1;i<user.featuredPhotos.length;i++){ %>
                      <div class="carousel-item">
                        <img class="cover mobile-cover" src="<%= user.featuredPhotos[i].image %>">
                        <div class="carousel-caption">
                          <h6 class="carousel-caption-heading"><%= user.featuredPhotos[i].heading %></h6>
                          <div><%= user.featuredPhotos[i].description %></div>
                        </div>
                      </div>
