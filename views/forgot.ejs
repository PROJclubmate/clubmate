<% include ./partials/header %>

<div class="row no-gutters">
	<div class="col-md-12">
		<form class="form-signin" action="/forgot" method="POST">
			<legend class="mb-5">Change Password</legend>
			<div class="form-group">
				<label for="email">Email address</label>
				<input type="email" name="email" autofocus class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-md btn-success btn-block" type="submit">Send</button>
			</div>
			<a href="/login">Back</a>
		</form>
	</div>
</div>

