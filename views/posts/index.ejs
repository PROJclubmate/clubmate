<% include ../partials/header %>
    
<div class="row no-gutters mt-1">
  <div class="col-lg-2 col-md-2 px-2 mobileNone">
    <div class="list-group border-light mt-3">
      <li class="list-group-item bluecolor2 text-sm boldtext"><i class="fas fa-question-circle"></i> Did you..</li>
      <hr class="hr-light">
      <li class="list-group-item text-sm darkgrey">
        <a href="https://www.facebook.com/groups/2660887327313418/" target="_blank" class="lightgrey nounderline">
          <div>... have a <span class="boldtext">question</span>?</div>
        </a>
      </li>
      <hr class="hr-light">
      <li class="list-group-item text-sm darkgrey">
        <a href="https://www.facebook.com/groups/400084017547657/" target="_blank" class="lightgrey nounderline">
          <div>... find a <span class="boldtext">bug</span>?</div>
        </a>
      </li>
      <hr class="hr-light">
      <li class="list-group-item text-sm darkgrey">
        <a href="https://www.facebook.com/groups/1351554461692986/" target="_blank" class="lightgrey nounderline">
          <div>... have a feature <span class="boldtext">suggestion</span>?</div>
        </a>
      </li>
    </div>
  </div>
  <div id="delegated-posts" class="col-lg-7 col-md-10 centerpad-posts">
    <% if(friendsPostUrl){ %>
      <div class="story-container mobilepad mt-3">
        <div class="d-flex scroll moz-scroll">
          <% for(var i=0;i<4;i++){ %>
            <div class="d-flex flex-column mr-3">
              <div class="story story-dark"></div>
              <div class="story-label lightgrey2 text-xxxs boldtext pb-2">something</div>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
    <div id="server-posts">
      <% //include ../partials/posts_index %>
    </div>
    <div id="client-posts"></div>
    <div class="text-center pt-2">
      <button id="load-more-btn" class="btn btn-light btn-sm btn-load" type="button" value="<%= //foundPostIds %>">
        <span id="load-more-span"></span>Load
      </button>
    </div>
  </div>
  <% if(currentUser){ %>
    <div class="col-lg-3 px-2 pb-2 mt-3 mobileNone tabletNone">
      <% include ../partials/latest_updates %>
    </div>
  <% } %>
</div>

<% include ../partials/footer %>