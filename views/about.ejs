<% include ./partials/header %>
<style>
  .story-loader{
    position: relative;
    width: 76px;
    height: 76px;
    cursor: pointer;
  }
  .story-loader svg{
    fill: none;
    stroke: #8a3ab9;
    stroke-linecap: round;
    stroke-width: 3;
    stroke-dasharray: 1;
    stroke-dashoffset: 0;
    animation: stroke-draw 6s ease-out infinite alternate;
  }
  .story-loader i{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
  @keyframes stroke-draw{
    from{
      stroke: #8a3ab9;
      stroke-dasharray: 1;
    }
    to{
      stroke: #cd486b;
      stroke-dasharray: 8;
    }
  }
</style>

