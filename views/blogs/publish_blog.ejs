<% include ../partials/header %>  

<style>
	.smalldp rounded-circle {
		height: 16px;
		width: 16px;
		border-radius: 50%;
	}

	.product-tag {
		border-radius: 1em;
		font-size: 0.9em;
	}

	.product-tag:hover {
		cursor: pointer;
	}

	.blog-content {
		margin-left: 1.25rem;
	}

	.blog-card {
		border-left: 0;
		border-right: 0;
		width: 50vw;
	}

	.card-image {
		margin-left: 1rem;
		margin-bottom: 1.25rem;
		height: 100px;
		width: 100px;
	}

	.icons:hover {
		cursor: pointer;
	}

	.p-name:hover {
		cursor: pointer;
	}

	.card-link {
		text-decoration: none;
		color: inherit;
	}

	.card-link:hover {
		text-decoration: none;
		color: inherit;
	}

