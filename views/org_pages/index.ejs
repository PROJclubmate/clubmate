<% include ../partials/header %>

<div class="row no-gutters">
	<div class="col-lg-9 order-md-first order-last card" style="min-height: 75vh;">
		<div class="organization valign orgdiv-name">
			<% if(match){ %>
				<div class="boldtext text-xxl">
					<div class="orgname"><sup class="greencolor text-xs pb-auto">My </sup><i class="fas fa-university lightgrey mr-2"></i><%= org_page.name %></div>
				</div>
			<% } else{ %>
				<div class="boldtext text-xxl">
					<div class="orgname"><i class="fas fa-university lightgrey mr-2"></i><%= org_page.name %></div>
					</div>
			<% } %>
			<div class="boldtext text-md badge badge-danger orgdiv-usercnt"><%= org_page.userCount %><span class="text-sm my-auto ml-1 mobilebold"> users</span></div>
		</div>
		<div class="orgdiv-clubcnt">
			<div class="boldtext lightgrey text-md"><span class=" mobilebold"><%= org_page.clubCount %></span> clubs</div>
		</div>
		<div class="orgpad py-1">
			<% for(var i=org_page.allClubs.length-1;i>=0;i--){ %>
				<% if(org_page.allClubs[i].category != '' && org_page.allClubs[i].categoryCount>0){ %>
					<div class="boldtext mobiletext3 category"><%= org_page.allClubs[i].category %> (<%= org_page.allClubs[i].categoryCount %>)</div>
				<% } else if(org_page.allClubs[i].category != '' && org_page.allClubs[i].categoryCount<=0){ %>
					<!-- don't print -->
				<% } else{ %>
						<div class="boldtext mobiletext3 category"><span class="redcolor">*</span>[Uncategorized] (<%= org_page.allClubs[i].categoryCount %>)</div>
				<% } %>
				<div class="my-2 lineheight2">
			  <% for(var j=org_page.allClubs[i].categoryClubIds.length-1;j>=0;j--){ %>
			  	<div class="valign">
				  	<div class="d-flex flex-row">
					    <div class="py-1 mb-auto">
					      <a href="/clubs/<%= org_page.allClubs[i].categoryClubIds[j]._id %>">
					      <img class="orgdp rounded-circle" src="<%= Clubs_50_clubAvatar[i][j] || '/images/noClub.png' %>"></a>
					    </div>
					    <div class="my-auto ml-2">
					      <span>
					        <a href="/clubs/<%= org_page.allClubs[i].categoryClubIds[j]._id %>" class="grey">
					          <strong><%= org_page.allClubs[i].categoryClubIds[j].name %></strong>
					        </a>
					      </span>
					      <span class="my-auto lightgrey text-xs"><%= org_page.allClubs[i].categoryClubIds[j].banner %></span>
					    </div>
					  </div>
					  <div class="darkgrey text-sm px-1 nowrap">
			        <em><%= org_page.allClubs[i].categoryClubIds[j].membersCount %> <span class="text-xxxs"><span class="lightgrey">MBR</span></span></em>
			      </div>
			    </div>
			  <% } %>
			</div>
			<% } %>
		</div>
	</div>
	<div class="col-md-4 col-lg-3 px-2">
    <div class="list-group">
      <li class="list-group-item orangecolor text-sm boldtext mt-3"><i class="fas fa-plus"></i> Invite your friends, spread the message</li>
    </div>
  </div>
</div>

<% include ../partials/footer %>