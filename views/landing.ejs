        #clubmate-logo{height: 30px;}
        #landing-hero{text-align: center;}
        h4{font-size: 2.125rem; line-height: 2.5rem;}
        .illustrations{width: 65% !important;}
        #clubmate_uses{max-width: 90vw !important;}
        .screen-number{font-size: 1.875rem !important; margin-left: 1rem; line-height: 2.675rem !important;}
        .screen-heading{margin-left: 0.5rem !important;}
        .screen-description{margin-left: -1.4375rem !important; margin-top: 0 !important;}
        .illustrations.screen-illustrations{max-width: 50vw !important; float: right; margin-right: 1rem;}
        .illustrations1and2{padding-bottom: 1.5rem;}
        .screenshots{margin-left: 3.5rem;}
        .screenshots-container-mobile{padding: 0 1.25rem !important; width: 100vw;
