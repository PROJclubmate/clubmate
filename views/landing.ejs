        0% {
          transform: scale(1.2);
        }
        50% {
          transform: scale(1);
        }
        100% {
          transform: scale(1.2);
        }
      }
      @media screen and (min-width: 768px){
        #landing-hero{padding-left: 2rem;}
        .screenshots-mobileview{box-shadow: none !important; width: 10rem !important;
