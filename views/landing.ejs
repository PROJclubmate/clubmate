        .screen-container{margin-top: 0 !important;}
        .screenshots-mobileview{width: 30vw !important; position: relative; left: 0; top: -12rem;}
        .screenshots-mobileview-container{height: 0 !important; margin-left: -0.25rem;}
        .half_height{max-width: unset !important;}
      }
      @media screen and (max-width: 481px){
        #welcome_to_clubmate{margin-left: 1.375rem !important;}
        .screenshots-mobileview{top: -12rem;}
      }
      @media screen and (max-width: 415px){
