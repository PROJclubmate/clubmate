<% include ./partials/header %>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
<style>
  h6{
    text-align: center; 
    border-bottom: 1px solid silver; 
    line-height: 0.1875rem;
    margin: 1.5rem 6.5rem 0.5rem 6.5rem;
  } 
  h6 span{ 
    background: #e0e0e0; 
    padding: 0 0.5rem;
  }
  .btn-google{
    border: 1px solid white;
    border-width: 1px !important;
    background-color: white;
    color: #757575;
    box-shadow: 0px 2px 2px -1px rgba(0,0,0,0.3) !important;
  }
  .btn-google:hover{
    border-color: #eeeeee;
    background-color: #eeeeee;
    color: #6d6d6d;
    box-shadow: 0px 3px 4px -1px rgba(0,0,0,0.3) !important;
  }
  .btn-google.focus, .btn-google:focus{
    border-color: white;
    background-color: #eeeeee;
    box-shadow: 0 0 0 0.2rem #b5c9ea !important;
  }
  .btn-google.disabled{
    background-color: #d4d4d4 !important;
    border-color: #d4d4d4 !important;
    color: #7f7f7f !important;
    box-shadow: none !important;
    cursor: default;
  }
</style>

<div class="row no-gutters absolute-center">
  <div class="col-md-12">
    <form class="form-signin pb-0" action="/login" method="POST">
      <h3 class="my-3">Get inside</h3>
      <div id="register-email" class="">
        <div class="position-relative">
          <label for="inputEmail" class="sr-only">Email</label>
          <input type="email" id="inputEmail" class="form-control" name="email" placeholder="email address" required>
        </div>
        <div class="input-group mt-1">
          <label for="inputPassword" class="sr-only">Password</label>
          <input id="inputPassword" class="form-control m-0" name="password" type="password" placeholder="password" required>
          <div class="input-group-append">
            <div id="showpw_btn" class="input-group-text pointer" onclick="showpw();" title="Show Password" style="background-color: whitesmoke;">
              <i class="far fa-eye-slash"></i>
            </div>
          </div>
        </div>
        <button class="btn btn-lg btn-success btn-round btn-block btn-shadow mt-5" type="submit">Login!</button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-signin px-0 pb-0 pt-4">
          <a class="lightgrey" href="/forgot">Forgot Password?</a>
          <br>
          <a href="/discover">Discover</a>
        </div>
      </div>
      <div id="register-options">
        <button class="btn btn-light btn-block noshadow mt-3 nodisplay type="button"
        onclick="hideOptions()" style="border-bottom-width: 1px;">
          Login with email
        </button>
        <h6>
          <span class="lightgrey slimtext">or</span>
        </h6>
        <a href="/auth/google" class="nounderline">
          <button class="btn btn-google btn-block mt-4" type="button" style="font-family: 'Roboto', sans-serif;">
            <span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
                <g transform="matrix(1, 0, 0, 1, 27.009001, -39.238998)">
                  <path fill="#4285F4" d="M -3.264 51.509 C -3.264 50.719 -3.334 49.969 -3.454 49.239 L -14.754 49.239 L -14.754 53.749 L -8.284 53.749 C -8.574 55.229 -9.424 56.479 -10.684 57.329 L -10.684 60.329 L -6.824 60.329 C -4.564 58.239 -3.264 55.159 -3.264 51.509 Z"/>
                  <path fill="#34A853" d="M -14.754 63.239 C -11.514 63.239 -8.804 62.159 -6.824 60.329 L -10.684 57.329 C -11.764 58.049 -13.134 58.489 -14.754 58.489 C -17.884 58.489 -20.534 56.379 -21.484 53.529 L -25.464 53.529 L -25.464 56.619 C -23.494 60.539 -19.444 63.239 -14.754 63.239 Z"/>
                  <path fill="#FBBC05" d="M -21.484 53.529 C -21.734 52.809 -21.864 52.039 -21.864 51.239 C -21.864 50.439 -21.724 49.669 -21.484 48.949 L -21.484 45.859 L -25.464 45.859 C -26.284 47.479 -26.754 49.299 -26.754 51.239 C -26.754 53.179 -26.284 54.999 -25.464 56.619 L -21.484 53.529 Z"/>
                  <path fill="#EA4335" d="M -14.754 43.989 C -12.984 43.989 -11.404 44.599 -10.154 45.789 L -6.734 42.369 C -8.804 40.429 -11.514 39.239 -14.754 39.239 C -19.444 39.239 -23.494 41.939 -25.464 45.859 L -21.484 48.949 C -20.534 46.099 -17.884 43.989 -14.754 43.989 Z"/>
                </g>
              </svg>
            </span>
            <span class="ml-3">Login with Google</span>
          </button>
        </a>
      </div>
    </form>
  </div>
</div>

<script>
  function showpw(){
    var x = document.getElementById('inputPassword');
    var btn = document.getElementById('showpw_btn');
    if (x.type === 'password'){
      x.type = 'text';
      btn.innerHTML = '<i class="far fa-eye"></i>'
    } else{
      x.type = 'password';
      btn.innerHTML = '<i class="far fa-eye-slash"></i>'
    }
  }
  function hideOptions(){
    document.getElementById('register-options').classList.add('nodisplay');
    document.getElementById('register-email').classList.remove('nodisplay');
  }
</script>
<% include ./partials/footer %>
