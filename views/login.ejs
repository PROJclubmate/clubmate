<% include ./partials/header %>

<div class="row no-gutters absolute-center">
  <div class="col-md-12">
    <form class="form-signin" action="/login" method="POST">
      <h3 class="my-3">Get inside</h3>
      <label for="inputEmail" class="sr-only">Email id</label>
      <input type="email" id="inputEmail" class="form-control" name="email" placeholder="email" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" class="form-control" name="password" placeholder="password" required>
      <div><input type="checkbox" onclick="showpw();"><span class="text-sm lightgrey mx-1">Show Password</span></div>
      <button class="btn btn-lg btn-success btn-round btn-block btnshadow mt-5" type="submit">Login!</button>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
    <div class="form-signin">
      <a class="lightgrey" href="/forgot">Forgot Password?</a>
      <br>
      <a href="/discover">Discover</a>
    </div>
  </div>
</div>

<% include ./partials/footer %>
