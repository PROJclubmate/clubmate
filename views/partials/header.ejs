<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>clubmate - Good company</title>
    <!-- <script src="/js/pace.min.js"></script> -->
    <!-- <link rel="stylesheet" href="/css/pace-theme-barber-shop.css"> -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/tempusdominus-bootstrap-4.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link href="https://fonts.googleapis.com/css?family=Bitter|Lato:900i&display=swap" rel="stylesheet">
    <!-- Mobile/PWA support -->
    <link rel="icon" type="image/x-icon" sizes="16x16" href="/images/icons/favicon-16x16.ico">
    <link rel="icon" type="image/x-icon" sizes="32x32" href="/images/icons/favicon-32x32.ico">
    <link rel="icon" type="image/x-icon" sizes="64x64" href="/images/icons/favicon-96x96.ico">
    <link rel="icon" type="image/png" sizes="192x192"  href="/images/icons/app-icon-192x192.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="#252120">
    <meta name="apple-mobile-web-app-title" content="clubmate">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-57x57.png" sizes="57x57">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-60x60.png" sizes="60x60">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-72x72.png" sizes="72x72">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-76x76.png" sizes="76x76">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-114x114.png" sizes="114x114">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-120x120.png" sizes="120x120">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-144x144.png" sizes="144x144">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-152x152.png" sizes="152x152">
    <link rel="apple-touch-icon" href="/images/icons/apple-icon-180x180.png" sizes="180x180">
    <meta name="msapplication-navbutton-color" content="#252120">
    <meta name="msapplication-TileColor" content="#252120">
    <meta name="msapplication-TileImage" content="/images/icons/app-icon-144x144.png">
    <meta name="theme-color" content="#252120">
  </head>
  <body>
    <!-- Load progress bar -->
    <div class="nanobar meter animate" id="bar-id" style="position: fixed;">
      <div class="bar"></div>
    </div>
    <nav id="navbar" class="navbar navbar-expand-md navbar-light fixed-top navback drop-shadow">
      <a href="#" onclick="hidesidebar(0);" class="btn hidesidebar mobileNoneFlex" id="menu-toggle">
        <i class="fas fa-bars"></i>
      </a>
      <div>
        <a href="/">
          <span id="brandname" class="navbar-brand name"><em>clubmate</em></span>
        </a>
      </div>
      <div>
        <% if(currentUser){ %>
          <div class="inbox_mobile nodisplay">
            <span class="notification">
              <a href="/chats" id="inbox_mobile" class="inbox_mobile nodisplay" title="Inbox" onclick="toggle_requests('inbox_mobile');"><i class="far fa-envelope"></i></a>
              <% if(currentUser.inboxMsgCount > 0){ %>
                <span class="inbox_mobile inbox_count badge badge-mobile text-xxs nodisplay"><%= currentUser.inboxMsgCount %></span>
              <% } %>
            </span>
          </div>
        <% } %>
        <div>
          <button id="mobile_toggler" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon notification">
              <% if (currentUser && currentUser.inboxMsgCount + currentUser.friendRequests.length + currentUser.clubInvites.length != 0){ %>
                <span class="badge badge-mobile text-xxs"><%= currentUser.inboxMsgCount + currentUser.friendRequests.length + currentUser.clubInvites.length %></span>
              <% } %>
            </span>
          </button>
        </div>
      </div>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'home' ? 'active' : '' %>">
            <a href="/home" class="nav-link">Home</a>
          </li>
          <!--Search bar-->
          <li class="nav-item">
            <form action="/search" method="GET" class="form-inline">
              <div class="input-group input-group-sm">
                <input id="nav_search" type="text" name="search" class="form-control search" placeholder="Search">
                <div class="input-group-append">
                  <button class="btn btn-secondary search" type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                  </button>
                </div>
              </div>
            </form>
          </li>
        </ul>
        <ul class="navbar-nav navbar-right">
          <% if(!currentUser){ %>
            <li class="nav-item">
              <a href="/help" id="help_offline" class="text-lg nav-link requests navhelp" data-toggle="tooltip" title="Help" onclick="toggle_requests('help_offline');"><i class="fas fa-question-circle"></i></a>
            </li>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
              <a href="/login" class="nav-link">Login</a>
            </li>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
              <a href="/register" class="nav-link">Sign Up</a>
            </li>
          <% } else{ %>
            <li class="nav-item">
              <a href="/help" id="help_online" class="text-lg nav-link requests navhelp" title="Help" onclick="toggle_requests('help_online');"><i class="fas fa-question-circle"></i></a>
            </li>
            <li class="nav-item notification">
              <span><a href="/chats" id="inbox" class="text-xl nav-link requests" title="Inbox"><i class="fas fa-envelope" onclick="toggle_requests('inbox');"></i></a></span>
              <% if(currentUser.inboxMsgCount > 0){ %>
                <span class="inbox_count badge text-xxs"><%= currentUser.inboxMsgCount %></span>
              <% } %>
            </li>
            <li class="nav-item notification" data-toggle="collapse" data-target=".navbar-collapse.show">
              <span id="requestslink" class="text-xl nav-link requests" title="Requests" onclick="toggle_requests('requestslink'); toggle_display('pop_box_requests');">
                <i class="fas fa-user-friends"></i>
              </span>
              <% if (currentUser && (currentUser.friendRequests.length!=0 || currentUser.clubInvites.length!=0)){ %>
                <span class="badge text-xxs"><%= currentUser.friendRequests.length + currentUser.clubInvites.length %></span>
              <% } %>
            </li>
            <li class="nav-item d-inline-flex">
              <div>
                <a href="/users/<%= currentUser.id %>" class="nav-link img">
                  <span><img class="navdp rounded-circle" src="<%= CU_50_profilePic || '/images/noUser.png' %>"></span>
                  <span id="navname"><%= currentUser.firstName %></span>
                </a>
              </div>
              <div class="vr"></div>
            </li>
            <li class="nav-item">
              <a href="/logout" class="nav-link">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>


<!-- Popup box requests -->
<div class="popup-box scroll moz-scroll" id="pop_box_requests">
  <% if (currentUser && currentUser.clubInvites.length != 0){ %>
    <div class="pop-header valign">
      <h6 class="nothing lightgrey text-xs">Club Invites</h6>
      <% if (currentUser.clubInvites.length != 0){ %>
        <button class="btn btn-danger btnxxs text-xs" onclick="closeForm('pop_box_requests'); toggle_requests('requestslink');"><i class="fas fa-times"></i></button>
      <% } %>
    </div>
    <hr>
    <% for(var i=0;i<clubInviteRequests.length;i++){ %>
      <div class="pop-container">
        <div class="valign py-1">
          <div class="d-inline-flex wordwrap">
            <span>
              <a href="/clubs/<%= clubInviteRequests[i]._id %>">
                <img class="navdp" src="<%= CI_50_clubAvatar[i] || '/images/noClub.png' %>"></a>
            </span>
            <span>
              <div class="d-flex flex-column lineheight2 mx-2">
                <a href="/clubs/<%= clubInviteRequests[i]._id %>" class="grey">
                  <strong class="text-sm"><%= clubInviteRequests[i].name %></strong></a>
                <span class="lightgrey text-xs"><%= clubInviteRequests[i].banner %></span>
              </div>
            </span>
          </div>
          <div class="mb-auto">
            <form action="/requests?_method=PUT" method="POST" class="form-inline" style="width: max-content;">
              <span>
                <button class="btn btnxs btn-primary text-sm" name="acceptInvite" type="submit" value="<%= clubInviteRequests[i]._id %>">Accept</button>
              </span>
              <span>
                <button class="btn btnxs btn-secondary text-sm" name="removeInvite" type="submit" value="<%= clubInviteRequests[i]._id %>">Decline</button>
              </span>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  <% } %>
  <% if(currentUser && currentUser.friendRequests.length != 0){ %>
    <div class="pop-header valign">
      <h6 class="nothing lightgrey text-xs">Friend Requests</h6>
      <% if (currentUser.clubInvites.length == 0){ %>
        <button class="btn btn-danger btnxxs text-xs" onclick="closeForm('pop_box_requests'); toggle_requests('requestslink');"><i class="fas fa-times"></i></button>
      <% } %>
    </div>
    <hr>
    <% for(var j=0;j<friendRequests.length;j++){ %>
      <div class="pop-container">
        <div class="valign py-1">
          <div class="d-inline-flex wordwrap">
            <span>
              <a href="/users/<%= friendRequests[j]._id %>">
                <img class="navdp" src="<%= FR_50_profilePic[j] || '/images/noUser.png' %>"></a>
            </span>
            <span>
              <div class="d-flex flex-column lineheight2 mx-2">
                <a href="/users/<%= friendRequests[j]._id %>" class="grey">
                  <strong class="text-sm"><%= friendRequests[j].fullName %></strong></a>
                <span class="lightgrey text-xs"><%= friendRequests[j].note %></span>
              </div>
            </span>
          </div>
          <div class="mb-auto">
            <form action="/requests?_method=PUT" method="POST" class="form-inline" style="width: max-content;">
              <span>
                <button class="btn btnxs btn-primary text-sm" name="acceptReq" type="submit" value="<%= friendRequests[j]._id %>">Accept</button>
              </span>
              <span>
                <button class="btn btnxs btn-secondary text-sm" name="removeReq" type="submit" value="<%= friendRequests[j]._id %>">Decline</button>
              </span>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  <% } else if(currentUser && (currentUser.friendRequests.length == 0 && currentUser.clubInvites.length == 0)){ %>
    <div class="pop-header valign">
      <span class="nothing lightgrey boldtext text-xs">No pending requests</span>
      <button class="btn btn-danger btnxxs text-xs" onclick="closeForm('pop_box_requests'); toggle_requests('requestslink');"><i class="fas fa-times"></i></button>
    </div>
  <% } %>
</div>


    <!-- The sidebar -->
    <div class="sidebar-back"></div>
    <div id="sidebar" class="sidebar scroll moz-scroll">
      <a class="hr2" id="side-home" href="/home">
        <div class="d-flex justify-content-start">
          <div><i class="fas fa-home sidebar-icon px-1 sidebar-iconmar"></i></div>
          <div class="sidebar-label my-auto">Home</div>
        </div>
      </a>
    <% if(!currentUser){ %>
      <a id="side-clubs" class="hr2">
        <div class="valign">
          <div class="d-flex justify-content-start">
            <div id="club-door" class="nocaretmar"><i class="fas fa-door-closed pl-2 mobilepad sidebar-icon px-1 mx-1"></i></div>
            <div class="sidebar-label my-auto">Clubs</div>
          </div>
          <div id="side-drop" class="invisible"><i class="fa fa-caret-down"></i></div>
        </div>
      </a>
    <% } else { %>
      <a id="side-clubs" class="hr2 dropdown-sidebar">
        <div class="valign">
          <div class="d-flex justify-content-start">
            <div id="club-door"><i class="fas fa-door-closed sidebar-icon px-1"></i></div>
            <div class="sidebar-label my-auto">Clubs</div>
          </div>
          <div id="side-drop" class="mx-1"><i class="fa fa-caret-down"></i></div>
        </div>
      </a>
      <div id="sidebar-dropbox" class="scroll moz-scroll">
        <% userClubs.forEach(function(club){ %>
          <div><a class="text-sm boldtext side-drop-elem" href="/clubs/<%= club.id %>"><%= club.clubName %></a></div>
        <% }); %>
      </div>
    <% } %>
      <a class="hr2" id="side-friends" href="/friends_posts">
        <div class="d-flex justify-content-start">
          <div><i class="fas fa-chalkboard-teacher sidebar-icon px-1"></i></div>
          <div class="sidebar-label my-auto">Friends'</div>
        </div>
      </a>
      <a class="hr2" id="side-discover" href="/discover">
        <div class="d-flex justify-content-start">
          <div><i class="fas fa-compass sidebar-icon px-1 sidebar-iconmar"></i></div>
          <div class="sidebar-label my-auto">Discover</div>
        </div>
      </a>
    </div>

    <!-- Page content -->
    <div id="content" class="content">
      <% if(error && error.length>0){ %>
        <div class="container pt-3">
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= error %>
          </div>
        </div>
      <% } %>
      <% if(success && success.length>0){ %>
        <div class="container pt-3">
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= success %>
          </div>
        </div>
      <% } %>
